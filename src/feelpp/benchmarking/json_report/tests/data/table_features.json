{
    "data": [
        { "name": "students", "filepath": "students.csv" }
    ],
    "content": [
        {
            "type": "section",
            "title": "Student Performance",
            "content": [
                {
                    "type": "table",
                    "data": "students",
                    "title": "Grades Overview",
                    "table": {
                        "columns": ["name", "subject", "score", "passed"],
                        "computed_columns": {
                            "grade": "('A' if row['score'] >= 90 else 'B' if row['score'] >= 80 else 'C' if row['score'] >= 70 else 'D')"
                        },
                        "rename": {
                            "name": "Student",
                            "subject": "Subject",
                            "score": "Score",
                            "passed": "Passed",
                            "grade": "Grade"
                        },
                        "group_by": { "columns": ["name"], "agg": "first" },
                        "format": {
                            "score": "%.1f",
                            "passed": { "True": "✔️", "False": "❌" }
                        },
                        "column_order": ["student", "subject", "score", "grade", "passed"],
                        "style": {
                            "column_align": { "Grade": "center", "Passed": "center" },
                            "column_width": { "Grade": 1, "Passed": 1 },
                            "classnames": ["sortable"]
                        }
                    },
                    "filter": { "placeholder": "Filter students..." }
                }
            ]
        }
    ]
}
