{
    "type": "object",
    "properties": {
        "reframe": {
            "type": "object",
            "properties": {
                "host_config": { "type": "string" },
                "report_prefix": { "type": "string" },
                "report_suffix": { "type": "string" },
                "directories": {
                    "type": "object",
                    "properties": {
                        "prefix": { "type": "string" },
                        "stage": { "type": "string" },
                        "output": { "type": "string" }
                    },
                    "required": ["prefix"]
                },
                "mode": {
                    "type": "object",
                    "properties": {
                        "type": { "type": "string" },
                        "exclusive_access": { "type": "boolean" },
                        "topology": {
                            "type": "object",
                            "properties": {
                                "min_physical_cpu_per_node": { "type": "integer" },
                                "max_physical_cpu_per_node": { "type": "integer" },
                                "min_node_number": { "type": "integer" },
                                "max_node_number": { "type": "integer" }
                            },
                            "required": [
                                "min_physical_cpu_per_node",
                                "max_physical_cpu_per_node",
                                "min_node_number",
                                "max_node_number"
                            ]
                        },
                        "sequencing": {
                            "type": "object",
                            "properties": {
                                "generator": { "type": "string" },
                                "sequence": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                }
                            },
                            "required": ["generator", "sequence"]
                        }
                    },
                    "required": ["type", "exclusive_access", "topology", "sequencing"]
                }
            },
            "required": ["host_config", "report_prefix", "report_suffix", "directories", "mode"]
        },
        "feelpp": {
            "type": "object",
            "properties": {
                "toolbox": { "type": "string" },
                "command_line": {
                    "type": "object",
                    "properties": {
                        "config_files": {
                            "type": "array",
                            "items": { "type": "string" }
                        },
                        "repository": {
                            "type": "object",
                            "properties": {
                                "prefix": { "type": "string" },
                                "case": { "type": "string" }
                            },
                            "required": ["prefix", "case"]
                        },
                        "case": {
                            "type": "object",
                            "properties": {
                                "dimension": { "type": "string" },
                                "discretization": { "type": "string" }
                            }
                        },
                        "json_patch": {
                            "oneOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "op": { "type": "string" },
                                            "path": { "type": "string" },
                                            "value": {
                                                "oneOf": [
                                                    { "type": "string" },
                                                    { "type": "number" }
                                                ]
                                            }
                                        },
                                        "required": ["op", "path", "value"]
                                    }
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "op": { "type": "string" },
                                        "path": { "type": "string" },
                                        "value": {
                                            "oneOf": [
                                                { "type": "string" },
                                                { "type": "number" }
                                            ]
                                        }
                                    },
                                    "required": ["op", "path", "value"]
                                }
                            ]
                        }
                    },
                    "required": ["config_files", "repository", "json_patch"]
                }
            },
            "required": ["toolbox", "command_line"]
        },
        "reporter": {
            "type": "object",
            "properties": {
                "active": { "type": "boolean" },
                "scaling": { "type": "string" }
            },
            "required": ["active", "scaling"]
        }
    },
    "required": ["reframe", "feelpp", "reporter"]
}
