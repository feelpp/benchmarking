{
    "Reframe":
    {
        "hostConfig":  "${WORKDIR}/src/feelpp/benchmarking/reframe/config-files/${HOSTNAME}.py",
        "reportPrefix": "",
        "reportSuffix": "",
        "Directories":
        {
            "prefix": "${WORKDIR}/build/reframe/",
            "stage": "",
            "output": ""
        },
        "Mode":
        {
            "type": "CpuVariation",
            "exclusiveAccess": true,
            "topology":
            {
                "minPhysicalCpuPerNode": 64,
                "maxPhysicalCpuPerNode": 128,
                "minNodeNumber": 1,
                "maxNodeNumber": 3
            },
            "sequencing":
            {
                "generator": "default",
                "sequence": []
            }
        }
    },

    "Feelpp":
    {
        "toolbox": "heatfluid",
        "CommandLine":
        {
            "config-files":
            [
                "/data/home/chabannes/datasets/eye2brain/eye-prone-velocity.cfg",
                "myprec_simple.cfg"
            ],
            "repository":
            {
                "prefix": "${FEELPPDB_PATH}/benchmarking/toolboxes/${TOOLBOX}",
                "case": "proneEye/M2-simple"
            },
            "case":
            {
                "dimension": "",
                "discretization": ""
            },
            "jsonPatch":
            [
                {
                    "op": "replace",
                    "path": "/Meshes/heatfluid/Import/filename",
                    "value": "$cfgdir/meshpartitioning/M2/mesh_o_p$np.json"
                }
            ]
        }
    },

    "Reporter":
    {
        "active": true,
        "scaling": "linear / quadratic / cubic"
    }
}