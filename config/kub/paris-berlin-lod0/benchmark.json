{
    "executable": "feelpp_kub_cem",
    "output_directory": "{{machine.output_app_dir}}/kub",
    "use_case_name": "Paris_Berlin",
    "timeout":"0-2:00:0",
    "resources":{
        "nodes":"{{parameters.resources.nodes.value}}",
        "tasks_per_node":128,
        "exclusive_access":true
    },
    "platforms": {
        "apptainer":{
            "image": {
                "url":"oras://ghcr.io/feelpp/ktirio-urban-building:master-sif",
                "name":"{{machine.containers.apptainer.image_base_dir}}/kub.sif"
            },
            "input_dir":"/input_data",
            "options": [
                "--home {{machine.output_app_dir}}",
                "--bind {{machine.input_dataset_base_dir}}/kub:{{platforms.apptainer.input_dir}}",
                "--env OMP_NUM_THREADS=1"
            ],
            "append_app_option":[]
        },
        "builtin":{
            "input_dir":"{{machine.input_dataset_base_dir}}/kub",
            "append_app_option":[]
        }
    },
    "remote_input_dependencies":{
        "simulators":{"girder":{"item":"675051994c9ccbdde21a4707","destination":"kub/"}},
        "berlin":{"girder":{"folder":"67b7532f4c9ccbdde21a5800","destination":"kub/Berlin/"}},
        "paris":{"girder":{"folder":"67b7533f4c9ccbdde21a5802","destination":"kub/Paris/"}},
        "mesh":{"girder":{"file":"66267bd3b0e95728eb00f6ec","destination":"kub/mesh.msh"}},
        "weather":{"girder":{"file":"662f9434b0e95728eb00f7ad","destination":"kub/weather.csv"}},
        "scenarios":{"girder":{"item":"67b496894c9ccbdde21a5769","destination":"kub/"}},
        "config":{"girder":{"file":"67b4a9904c9ccbdde21a5775","destination":"kub/kub.cfg"}}
    },
    "options": [
        "--config-file {{platforms.{{machine.platform}}.input_dir}}/kub.cfg",
        "--cem.simulator.lod0.modelisation.maxfloors=10",

        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding1Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding2Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding3Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding4Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding5Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding6Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding7Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding8Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding9Floors.fmu",
        "--cem.simulator.lod0.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/ApplicationFlatRoofBuilding10Floors.fmu",

        "--cem.simulator.sun.filename={{platforms.{{machine.platform}}.input_dir}}/simulators/Sun.fmu",

        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc1.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc2.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc3.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc4.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc5.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc6.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc7.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc8.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc9.json",
        "--cem.simulator.lod0.description.filenames={{platforms.{{machine.platform}}.input_dir}}/simulators/simulatordesc10.json",

        "--cem.gis.metadata.filename={{platforms.{{machine.platform}}.input_dir}}/{{parameters.city.value}}/{{parameters.mesh_detail.value}}/gis.json",
        "--cem.mesh.lod0.filename={{platforms.{{machine.platform}}.input_dir}}/{{parameters.city.value}}/{{parameters.mesh_detail.value}}/mesh_0_Lod0.msh",
        "--cem.weather.filename={{platforms.{{machine.platform}}.input_dir}}/{{parameters.city.value}}/{{parameters.mesh_detail.value}}/weather-data-0.hourly-variables.csv",

        "--cem.scenarios.filename={{platforms.{{machine.platform}}.input_dir}}/scenarios_local/scenarios.json",

        "--cem.instance.time.start=0",
        "--cem.instance.time.stop=86400",
        "--cem.instance.time.step=3600",

        "--cem.instance.postprocess.export.visualization.enabled=false",
        "--cem.instance.postprocess.export.report.enabled=false",
        "--cem.instance.postprocess.export.outputs.csv.enabled=false",
        "--cem.instance.solar_shading.enabled=true",
        "--cem.instance.idealflows.enabled=true",

        "--cem.database.directory {{output_directory}}/{{instance}}/{{use_case_name}}",
        "--directory {{output_directory}}/{{instance}}/{{use_case_name}}"
    ],
    "scalability": {
        "directory": "{{output_directory}}/{{instance}}/{{use_case_name}}/cem/",
        "stages": [
            {
                "name":"",
                "filepath": "instances/np_{{parameters.resources.tasks.value}}/logs/timers.json",
                "format": "json",
                "variables_path":["*.timeElapsed.max","execute.subtimers.*.subtimers.*.timeElapsed.max","execute.subtimers.*.timeElapsed.max"]
            },
            {
                "name":"",
                "filepath": "logs/timers.json",
                "format": "json",
                "variables_path":["*.timeElapsed.max","*.subtimers.*.subtimers.*.timeElapsed.max"]
            }
        ]
    },
    "sanity": {
        "success": ["[ Stopping Feel++ ]"],
        "error": ["Error"]
    },
    "parameters": [
        {
            "name": "resources",
            "zip":[
                {
                    "name":"nodes",
                    "geometric": { "start":1, "ratio":2, "n_steps":2 }
                },
                {
                    "name":"tasks",
                    "geometric":{"start":128,"ratio":2,"n_steps":2}
                }
            ]
        },
        {
            "name": "city",
            "sequence": ["Paris","Berlin"]
        },
        {
            "name":"mesh_detail",
            "sequence":["1000m","2000m"]
        }
    ]
}