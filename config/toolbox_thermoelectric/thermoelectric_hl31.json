{
    "executable": "feelpp_toolbox_thermoelectric",
    "output_directory": "{{machine.output_app_dir}}/toolboxes/thermoelectric/HL_31",
    "use_case_name": "HL_31",
    "timeout":"0-01:00:00",
    "resources":{
        "tasks":"{{parameters.tasks.value}}",
        "exclusive_access":true
    },
    "input_file_dependencies":{
        "case_cfg":"feelpp_toolboxes/{{use_case_name}}/HL-31.cfg",
        "mesh_json":"feelpp_toolboxes/{{use_case_name}}/HL-31_p{{parameters.tasks.value}}.json",
        "mesh_hdf5":"feelpp_toolboxes/{{use_case_name}}/HL-31_p{{parameters.tasks.value}}.h5"
    },
    "platforms": {
        "apptainer":{
            "image": {
                "filepath":"{{machine.containers.apptainer.image_base_dir}}/feelpp-noble.sif"
            },
            "input_dir":"/input_data",
            "options": [
                "--home {{machine.output_app_dir}}",
                "--bind {{machine.input_dataset_base_dir}}/:{{platforms.apptainer.input_dir}}",
                "--env OMP_NUM_THREADS=1"
            ]
        }
    },
    "options": [
        "--config-files {{platforms.{{machine.platform}}.input_dir}}/{{input_file_dependencies.case_cfg}}",
        "--directory {{output_directory}}/{{instance}}",
        "--repository.case {{use_case_name}}",
        "--fail-on-unknown-option 1",
        "--thermo-electric.scalability-save=1",
        "--thermo-electric.heat.scalability-save=1",
        "--thermo-electric.electric.scalability-save=1",
        "--repository.append.np 0",
        "--case.discretization {{parameters.discretization.value}}",
        "--thermo-electric.json.patch='{\"op\": \"replace\",\"path\": \"/Meshes/thermoelectric/Import/filename\",\"value\": \"{{platforms.{{machine.platform}}.input_dir}}/{{input_file_dependencies.mesh_json}}\" }'"
    ],
    "additional_files":{
        "parameterized_descriptions_filepath":"{{output_directory}}/{{instance}}/{{use_case_name}}/thermoelectric.information.adoc",
        "custom_logs":[
            "{{output_directory}}/{{instance}}/{{use_case_name}}/logs/feelpp_toolbox_thermoelectric.INFO",
            "{{output_directory}}/{{instance}}/{{use_case_name}}/logs/feelpp_toolbox_thermoelectric.WARNING"
        ]
    },
    "scalability": {
        "directory": "{{output_directory}}/{{instance}}/{{use_case_name}}",
        "clean_directory":true,
        "stages": [
            {
                "name": "Constructor",
                "filepath": "thermo-electric.scalibility.ThermoElectricConstructor.data",
                "format": "tsv"
            },
            {
                "name": "PostProcessing",
                "filepath": "thermo-electric.scalibility.ThermoElectricPostProcessing.data",
                "format": "tsv"
            },
            {
                "name": "Solve",
                "filepath": "thermo-electric.scalibility.ThermoElectricSolve.data",
                "format": "tsv",
                "units":{
                    "*":"s",
                    "ksp-niter":"iter"
                }
            }
        ]
    },
    "parameters": [
        {
            "name": "tasks",
            "sequence": [4,8,16,32,64,128,256]
        },
        {
            "name": "discretization",
            "sequence": ["P1","P2"]
        }
    ]
}