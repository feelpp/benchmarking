{
    "executable": "feelpp_toolbox_electric",
    "output_directory": "{{machine.output_app_dir}}/toolboxes/electric/quarter_turn_3d",
    "use_case_name": "quarter_turn_3d",
    "platforms": {
        "apptainer":{
            "image": {
                "name":"{{machine.containers.apptainer.image_base_dir}}/feelpp.sif"
            },
            "input_dir":"/input_data/",
            "options": [
                "--home {{machine.output_app_dir}}",
                "--bind {{machine.input_dataset_base_dir}}/{{use_case_name}}/:{{platforms.apptainer.input_dir}}"
            ],
            "append_app_option":[]
        },
        "builtin":{
            "input_dir":"/usr/share/feelpp/data/testcases/toolboxes/electric/cases/quarter-turn/",
            "append_app_option":[]
        }
    },
    "options": [
        "--config-files {{platforms.{{machine.prog_environment}}.input_dir}}/3d.cfg",
        "--directory {{output_directory}}/{{instance}}",
        "--repository.case {{use_case_name}}",
        "--fail-on-unknown-option 1",
        "--electric.scalability-save=1",
        "--repository.append.np 0",
        "--electric.json.patch='{\"op\": \"replace\",\"path\": \"/Meshes/electric/Import/hsize\",\"value\": {{parameters.hsize.value}} }'"
    ],
    "outputs": [],
    "scalability": {
        "directory": "{{output_directory}}/{{instance}}/{{use_case_name}}",
        "stages": [
            {
                "name": "Constructor",
                "file": "electric.scalibility.ElectricConstructor.data",
                "format": "tsv"
            },
            {
                "name": "PostProcessing",
                "file": "electric.scalibility.ElectricPostProcessing.data",
                "format": "tsv"
            },
            {
                "name": "Solve",
                "file": "electric.scalibility.ElectricSolve.data",
                "format": "tsv"
            }
        ]
    },
    "sanity": {
        "success": [],
        "error": []
    },
    "upload": {
        "platform": "girder",
        "folder_id": "6733114eb0e95728eb010ba5"
    },
    "parameters": [
        {
            "name": "nb_tasks",
            "sequence": [
                {"tasks" : 16, "nodes":1, "exclusive_access":true},
                {"tasks" : 32, "nodes":1, "exclusive_access":true},
                {"tasks" : 64, "nodes":2, "exclusive_access":true},
                {"tasks" : 128, "nodes":2, "exclusive_access":true}
            ]
        },
        {
            "name": "hsize",
            "linspace": {
                "min": 0.03,
                "max": 0.05,
                "n_steps": 3
            }
        }
    ],
    "plots": [
        {
            "title": "Constructor step absolute performance",
            "plot_types": [
                "stacked_bar",
                "table"
            ],
            "transformation": "performance",
            "variables": [
                "Constructor_createMesh",
                "Constructor_createExporters",
                "Constructor_graph",
                "Constructor_matrixVector",
                "Constructor_algebraicOthers"
            ],
            "names": [
                "createMesh",
                "createExporters",
                "graph",
                "matrixVector",
                "algebraicOthers"
            ],
            "xaxis": {
                "parameter": "nb_tasks",
                "label": "Number of tasks"
            },
            "secondary_axis": {
                "parameter": "hsize",
                "label": "h size"
            },
            "yaxis": {
                "label": "execution time (s)"
            }
        },
        {
            "title": "Constructor step relative performance",
            "plot_types": [
                "stacked_bar"
            ],
            "transformation": "relative_performance",
            "variables": [
                "Constructor_createMesh",
                "Constructor_createExporters",
                "Constructor_graph",
                "Constructor_matrixVector",
                "Constructor_algebraicOthers"
