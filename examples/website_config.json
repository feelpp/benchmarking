{
    "dashboard_metadata": {
        "template": "${TEMPLATE_DIR}/dashboardOverview.adoc.j2",
        "data": {"title": "feelpp.benchmarking"}
    },
    "views": {
        "machines": {"applications":"use_cases"},
        "applications": {"use_cases":"machines"}
    },
    "template_defaults":{
        "repositories":{
            "template": "${TEMPLATE_DIR}/overview.adoc.j2",
            "data":{"filepath":"./examples/overview.json","prefix":"plots"}
        },
        "components":{
            "all": {
                "template": "${TEMPLATE_DIR}/overview.adoc.j2",
                "data":{"filepath":"./examples/overview.json","prefix":"plots"}
            },
            "machines": {
                "template": "${TEMPLATE_DIR}/machineOverview.adoc.j2",
                "data": { "card_type": "machine", "card_image": "fa-solid fa-microchip" }
            },
            "applications": { "card_type": "application", "card_image": "fa-solid fa-diagram-project" },
            "use_cases": { "card_type": "usecase", "card_image": "fa-solid fa-briefcase" }
        },
        "leaves":{
            "template": "${TEMPLATE_DIR}/reframeReport.adoc.j2",
            "data": [
                { "filepath": "report.json", "prefix": "report", "action": "json2adoc" },
                { "filepath": "partials/", "action": "copy", "prefix": "descriptions" },
                { "filepath": "logs/", "action": "copy", "prefix": "logs" }
            ]
        }
    },
    "repositories":{
        "machines": {"title": "Supercomputers", "description": "Systems", "card_type":"machine"},
        "applications": {"title": "Applications", "description": "Applications","card_type":"application"},
        "use_cases":{"title":"Use Cases", "description":"Use Cases","card_type":"usecase"}
    },
    "components": {
        "machines":{
            "gaya": { "title": "gaya", "description": "Strasbourg - France", "nodes":"6","cores_per_node":"128"},
            "discoverer": { "title": "Discoverer", "description": "Sofia - Bulgaria", "nodes":"1128","cores_per_node":"128"},
            "default": { "title": "Default", "description": "Local system" }
        },
        "applications":{
            "sortingApp": { "title": "sortingApp", "description": "Sorting algorithms", "card_image":"fa-solid fa-arrow-up-wide-short" },
            "fibonacci": {"title": "fibonacci", "description": "n-th Fibonacci number", "card_image":"fa-solid fa-fan"},
            "matrixvector": {"title": "matrixvector", "description": "Operations between Matrix and Vector","card_image":"fa-solid fa-table-list" },
            "parallelSum": {"title": "parallelSum", "description": "Compute the sum of an array using MPI","card_image":"fa-solid fa-plus" }
        },
        "use_cases":{
            "Fibonacci": { "title": "Fibonacci", "description": "n-th Fibonacci number", "card_image": "fa-solid fa-fan" },
            "Multiplication": { "title": "Multiplication", "description": "Multiplication between different objects", "card_image": "fa-solid fa-times" },
            "parallel_sum": { "title": "Parallel_Sum", "description": "Compute the sum of an array using MPI", "card_image": "fa-solid fa-plus" },
            "sorting": { "title": "Sorting", "description": "Sorting algorithms", "card_image": "fa-solid fa-arrow-up-wide-short" }
        }
    },
    "component_map": {
        "default": {
            "sortingApp": {
                "sorting":{
                    "path": "./reports/sortingApp/sorting/default",
                    "template_info": { "application": "sortingApp", "machine": "default" }
                }
            },
            "fibonacci": {
                "Fibonacci":{
                    "path": "./reports/fibonacci/Fibonacci/default",
                    "template_info": { "application": "fibonacci", "machine": "default" }
                }
            },
            "matrixvector": {
                "Multiplication":{
                    "path": "./reports/matrixvector/Multiplication/default",
                    "template_info": { "application": "matrixvector", "machine": "default", "use_case":"multiplication"}
                }
            },
            "parallelSum": {
                "parallel_sum":{
                    "path": "./reports/parallelSum/parallel_sum/default",
                    "template_info": { "application": "parallelSum", "machine": "default" }
                }
            }
        }
    }
}